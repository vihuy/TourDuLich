@model IEnumerable<Core.Doan>

@{
    ViewBag.Title = "Index";
}

<h2>Tìm Kiếm Đoàn</h2>

<form action="/Doans">
    <input type="text" name="TimDoan" placeholder="Nhập tên đoàn ..." class="form-control" style="float:left" />
    <input type="submit" value="Tìm kiếm" class="btn btn-default"/>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên")
        </th>
        <th>
            @Html.DisplayName("Số lượng khách")
        </th>
        <th>
            @Html.DisplayName("Số lượng nhân viên")
        </th>
        <th>
            @Html.DisplayName("Ghi chú")
        </th>
        <th>
            @Html.DisplayName("Đoàn trưởng")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SLKhach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SLNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tour_Gia.GhiChu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhanVien.HoTen)
        </td>     
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaDoan })
        </td>

    </tr>
}

</table>
