@model IEnumerable<Core.KhachHang>

@{
    ViewBag.Title = "Index";
}

<h2>Tìm Kiếm Khách Hàng</h2>

<form action="/KhachHangs">
    <input type="text" name="TimKhachHang" placeholder="Nhập tên khách hàng ..." class="form-control" style="float:left" />
    <input type="submit" value="Tìm kiếm" class="btn btn-default" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Họ tên")
        </th>
        <th>
            @Html.DisplayName("Giới tính")
        </th>
        <th>
            @Html.DisplayName("Ngày sinh")
        </th>
        <th>
            @Html.DisplayName("Trạng thái")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @if (!item.GioiTinh)
                {@("Nữ")}
            else
                {@("Nam")}
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaKH })
        </td>
    </tr>
}

</table>
